<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app_perso.tutorfinder_v2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tutor_finder_v2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tutor_finder_v2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.forgottenPassword.ForgottenPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.AdminHomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/admin_portal"/>
        <activity
            android:name=".view.TutorHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.StudentHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.signInSignUp.ui.SignInSignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TempActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.splashScreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>